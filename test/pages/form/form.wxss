.container{
  padding: 1rem;
  font-size: 1rem;
  line-height: 1rem;
  background-size: cover;
  padding-top: 40%;
}

.login{
  display: flex;
  align-items: center;
  margin-bottom: 1rem;
  border: 1px #aaa solid;
}

.login text{
  flex-grow: 1;
  text-align: right;
  border-right: 1px #aaa solid;
}

.login input{
  font-size: 0.7rem;
  color: #ccc;
  flex-grow: 3;
  border: 1px;
  display: inline-block;
  border-radius: 0.3rem;
  box-shadow: 0 0 0.15rem #aaa;
  padding: 0.3rem;
}

.backview{
  width: 414px;
  height: 896px;
  overflow:hidden; 
  position:fixed;
  background-size: 100% 100%; 
}

.background-image{
  position: absolute;
  top: 0px;
  bottom: 0px;
  left: 0px;
  width: 100%;
  height: 100%;
  z-index: 11;
}
